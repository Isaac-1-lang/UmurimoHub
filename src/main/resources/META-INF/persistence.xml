<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>com.umurimo.umurimohub.entities.UserEntity</class>
        <class>com.umurimo.umurimohub.entities.WorkerEntity</class>
        <class>com.umurimo.umurimohub.entities.AttendanceEntity</class>
        <class>com.umurimo.umurimohub.entities.DeductionEntity</class>
        <class>com.umurimo.umurimohub.entities.PunishmentEntity</class>
        <class>com.umurimo.umurimohub.entities.HRActivityLog</class>
        
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <!-- Credentials are now loaded via environment variables in DBConnection.java -->
            <!-- <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/umurimohub"/> -->
            <!-- <property name="jakarta.persistence.jdbc.user" value="postgres"/> -->
            <!-- <property name="jakarta.persistence.jdbc.password" value="121402pr0732021"/> -->
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.physical_naming_strategy" value="org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl"/>
        </properties>
    </persistence-unit>
</persistence>
